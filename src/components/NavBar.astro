---
import navLogo from '../assets/navLogo.svg'
import LanguagePicker from "../components/LanguagePicker.astro"

import { getLangFromUrl, useTranslations } from "../i18n/utils"
let currentPath = new URL(Astro.request.url).pathname
currentPath = currentPath.endsWith('/') ? currentPath : currentPath + '/';
const currentLang = getLangFromUrl(Astro.url)
const t = useTranslations(currentLang)
---

<header>
    <nav>
        <div class="left-info">
            <img src={navLogo.src} alt="logo" width="90rem"/>
            <div class="options" id="container-menu">
                <a href="#hero">{t("nav.start")}</a>
                <a href="#projects">{t("nav.project")}</a>
                <a href="#abilities">{t("nav.abilities")}</a>
                <a href="#education">{t("nav.education")}</a>
                <a href="#contact">{t("nav.contact")}</a>
            </div>
        </div>
        <div class="right-info">
            <a href=`/cv/${t('nav.cv')}` download><button>{t("nav.download")}</button></a>
            <LanguagePicker/>
            <div id="hamburguer" style="width: 40px; height: 40px; cursor: pointer;">
                <svg id="burger-svg" width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg" aria-label="Menu" role="img">
                    <rect class="line line1" y="14" width="30" height="2.5" rx="2" fill="#222" />
                    <rect class="line line2" y="22" width="30" height="2.5" rx="2" fill="#222" />
                    <rect class="line line3" y="30" width="30" height="2.5" rx="2" fill="#222" />
                </svg>
            </div>
        </div>
    </nav>

    <script >
        const burger = document.getElementById('burger-svg');
        const menuContainer = document.getElementById('container-menu');
        let open = false;

        burger.addEventListener('click', () => {
            open = !open;
            burger.classList.toggle('open', open);
            menuContainer.classList.toggle('open', open);
        });

        document.addEventListener('click', (e) => {
            // Si el menú está abierto y el click NO fue dentro del menú ni en la hamburguesa, cerramos
            if (open && !menuContainer.contains(e.target) && !burger.contains(e.target)) {
                open = false;
                burger.classList.remove('open');
                menuContainer.classList.remove('open');
            }
        });
    </script>
</header>

<style>
    header{
        backdrop-filter: blur(35px);
        position: fixed;
        top: 0;
        z-index: 5;
        width: 100%;
    }

    nav{
        font-size: 12px;
        color: #222;
        padding: 15px 0;
        width: 100%;
        display: flex;
        font-family: "MuseoModerno-Light", sans-serif;
    }

    .left-info{
        width: 70%;
        display: flex;
    }

    .left-info a:hover{
        color: #F35889;
        transition: all cubic-bezier(1,0,0,1)
    }


    .left-info img, .right-info img{
        padding: 0 20px;
    }

    .options{
        width: 100%;
        display: flex;
        align-items: center;
    }

    .options a{
        margin:0 1rem;
    }

    .right-info{
        width: 30%;
        display: flex;
        justify-content: end;
        align-items: end;
    }

    #hamburguer {
        display: none;
    }

    @media (max-width: 700px) {
        nav {
            position: relative;
        }

        #container-menu.open {
            max-height: 300px;
        }

        #container-menu a {
            line-height: 1.5rem;
        }

        /* Mostrar hamburguesa */
        #hamburguer {
            display: block;
            -webkit-tap-highlight-color: transparent;
            position: relative; /* para que no se afecte el flujo */
        }

        .options {
            display: none;
            position: absolute;
            top: 100%; /* justo debajo del nav o hamburguesa */
            right: 10px; /* o donde quieras alinearlo */
            background-color: rgba(255 255 255 / 0.9);
            border-radius: 8px;
            width: 150px;
            padding: 0.5rem 0;
            z-index: 20;
        }

        .options.open {
            display: flex;
            flex-direction: column;
            align-items: end;
        }
    }

    /* SVG Hamburguesa */
    #hamburguer svg {
        user-select: none;
    }
    //
    .line {
        transition: transform 0.4s ease, opacity 0.4s ease;
        transform-origin: center;
    }

    .open .line1 {
        //transform: translateY(9px) rotate(45deg);
        fill: #F35889;
    }

    .open .line2 {
        //opacity: 0;
        fill: #F35889;

    }

    .open .line3 {
        fill: #F35889;
        //transform: translateY(-9px) rotate(-45deg);
    }
</style>